" == Custom bundles (mind the filetype settings!) ==============================

filetype on   " first on, to avoid vim exiting with status code 1!
filetype off  " required!

Plugin 'chriskempson/base16-vim'
Plugin 'jeffkreeftmeijer/vim-numbertoggle'
Plugin 'easymotion/vim-easymotion'

" test
Plugin 'slashmili/alchemist.vim'
Plugin 'majutsushi/tagbar'

filetype plugin indent on
set cursorline

" ctags test
let g:tagbar_type_elixir = {
    \ 'ctagstype' : 'elixir',
    \ 'kinds' : [
        \ 'f:functions',
        \ 'functions:functions',
        \ 'c:callbacks',
        \ 'd:delegates',
        \ 'e:exceptions',
        \ 'i:implementations',
        \ 'a:macros',
        \ 'o:operators',
        \ 'm:modules',
        \ 'p:protocols',
        \ 'r:records'
    \ ]
\ }
nmap <F8> :TagbarToggle<CR>

" spelling color
" hi clear SpellBad
" hi SpellBad cterm=underline ctermfg=LightRed term=reverse

" == General ===================================================================

" wrap line in paragraph
:vmap <leader>p <S-S><p>

" if $TMUX == ''
"   set clipboard+=unnamed
" endif

" Vim numbertoggle
let g:NumberToggleTrigger="<C-l>"

" == Colours ===================================================================

if filereadable(expand("~/.vimrc_background"))
  let base16colorspace=256
  source ~/.vimrc_background
endif

" == System ====================================================================

if has("unix")
  let s:uname = system("uname")

  if s:uname == "Darwin\n"

  endif
endif

