#!/bin/sh
CUR_DIR=$PWD

# current dir, should match the theme name
DIR=${PWD##*/}

# svn export theme to tmp
svn export -q . /tmp/$DIR

# clean out the theme
rm -rf /tmp/$DIR/csslib
rm -rf /tmp/$DIR/style.less
rm -rf /tmp/$DIR/template

# zip 
cd /tmp/$DIR/
zip -rq ~/Desktop/$DIR.zip *

# cleanup + reset
rm -rf /tmp/$DIR
cd $CUR_DIR

echo 'Done! Gem awaits you on your Desktop'
